<%- include ('~header.ejs')%>

    <section class="container">
       <div class="row justify-content-center mt-4">
           <div class="col-md-6">
            <form action="/admin/employees/add" method="POST" class="">
                <legend>Add New Employee</legend>
                <div class="flex-col">
                    <div class="row">
                        <label class="col">
                            <span>First Name</span>
                            <input type="text" name="fname" class="form-control mb-1">
                        </label>
                        <label  class="col">
                            <span>Last Name</span>
                            <input type="text" name="lname" class="form-control mb-1">
                        </label>
                    </div>
                    <label>
                        <span>Username</span>
                        <input type="text" name="username" class="form-control mb-1">
                    </label>
                    <label>
                        <span>Email: </span>
                        <input type="email" name="email" class="form-control mb-1">
                    </label>
                    <label>
                        <span> Address Line1: </span>
                        <input type="text" class="form-control mb-1" name="addressLine1">
                    </label>
                    <label>
                        <span> Address Line2: </span>
                        <input type="text" class="form-control mb-1" name="addressLine2">
                    </label>
                    <label>
                        <span> Parish: </span>
                        <input type="text" class="form-control mb-1" name="parish">
                    </label>
                    <label>
                        <span>Department: </span>
                        <select class="form-select" aria-label=".form-select-sm example" name="department">
                            <% departments.forEach((department)=>{%>
                            <option value="<%= department.id%>"><%= department.department%></option>
                            <%})%>
                        </select>
                    </label>
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" name="setAdmin" id="flexRadioDefault1">
                        <label class="form-check-label" for="flexRadioDefault1">
                          Set to Admin
                        </label>
                      </div>
                </div>
                <div class="mt-4">
                    <button class="btn btn-primary">Create Employee</button>
                </div>
            </form>
           </div>
       </div> 
    </section>
<%- include ('~footer.ejs')%>